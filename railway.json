{
  "$schema": "https://railway.app/schema.json",
  "name": "openclaw-gateway",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "openclaw gateway",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10
  }
}
